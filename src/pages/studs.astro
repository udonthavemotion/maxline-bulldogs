    videoSrc="/maxlinebulldogs insta/maxline/maxlinebulldogs/maxlinebulldogs_1745394952_3616957193120315146_69185781706.mp4"
    title="Meet Our Champions"
    subtitle="Cinematic Legends in Every Bloodline"
    overlay={true}
    autoplay={true}
    loop={true}
    muted={true}
    className="h-[70vh]"
  />

  <!-- Main Content -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <!-- Introduction -->
    <div class="text-center mb-16 fade-in">
      <h1 class="text-4xl md:text-5xl font-playfair font-bold text-accent mb-6">
        Our Champion Studs
      </h1>
      <p class="text-xl text-silver max-w-3xl mx-auto leading-relaxed">
        Each of our champion studs embodies the dramatic presence and legendary status of iconic film characters. 
        Born from champion bloodlines and raised with cinematic inspiration, they represent the pinnacle of 
        AKC Mini English Bulldog breeding excellence.
      </p>
    </div>

    <!-- Stud Profiles -->
    <div class="space-y-24">
      {studs.map((stud, index) => (
        <section class={`stud-profile ${stud.theme} ${index % 2 === 0 ? 'slide-left' : 'slide-right'}`}>
          <div class={`grid grid-cols-1 lg:grid-cols-2 gap-12 items-center ${index % 2 === 0 ? '' : 'lg:flex-row-reverse'}`}>
            <!-- Stud Info -->
            <div class={`${index % 2 === 0 ? 'lg:order-1' : 'lg:order-2'}`}>
              <div class="mb-8">
                <h2 class="text-3xl md:text-4xl font-playfair font-bold text-accent mb-2">
                  {stud.name}
                </h2>
                <p class="text-xl text-silver mb-6 italic">
                  {stud.subtitle}
                </p>
                <p class="text-lg text-white leading-relaxed mb-8">
                  {stud.description}
                </p>
              </div>

              <!-- Traits -->
              <div class="mb-8">
                <h3 class="text-xl font-playfair font-semibold text-accent mb-4">
                  Champion Traits
                </h3>
                <ul class="grid grid-cols-2 gap-2">
                  {stud.traits.map(trait => (
                    <li class="flex items-center text-silver">
                      <span class="text-accent mr-2">★</span>
                      {trait}
                    </li>
                  ))}
                </ul>
              </div>

              <!-- Stats Table -->
              <div class="bg-card-gradient p-6 rounded-lg border border-accent border-opacity-20">
                <h3 class="text-xl font-playfair font-semibold text-accent mb-4">
                  Stud Information
                </h3>
                <div class="grid grid-cols-2 gap-4">
                  {Object.entries(stud.stats).map(([key, value]) => (
                    <div class="border-b border-accent border-opacity-20 pb-2">
                      <dt class="text-sm text-silver">{key}</dt>
                      <dd class="text-lg text-white font-semibold">{value}</dd>
                    </div>
                  ))}
                </div>
              </div>

              <!-- Reserve Button -->
              <!-- TODO: Integrate Stripe payment processing for stud services -->
              <div class="mt-8">
                <a href="/contact" class="luxury-button inline-block">
                  Reserve {stud.name}
                </a>
              </div>
            </div>

            <!-- Stud Gallery -->
            <div class={`${index % 2 === 0 ? 'lg:order-2' : 'lg:order-1'}`}>
              <Gallery 
                images={stud.media}
                title={`${stud.name} Gallery`}
                columns={2}
                className="stud-gallery"
              />
            </div>
          </div>
        </section>
      ))}
    </div>

    <!-- Call to Action -->
