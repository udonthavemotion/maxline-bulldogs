<style>
  /* Stud Profile Animations */
  .stud-profile {
    opacity: 0;
    transform: translateY(50px);
    animation: fadeInUp 1s ease-out forwards;
  }

  .slide-left {
    animation-delay: 0.2s;
  }

  .slide-right {
    animation-delay: 0.4s;
  }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Theme-specific styling */
  .stud-profile.joker {
    border-left: 4px solid #D2691E;
  }

  .stud-profile.hannibal {
    border-left: 4px solid #2F2F2F;
  }

  .stud-profile.substance {
    border-left: 4px solid #F5F5DC;
  }

  .stud-profile.nirvana {
    border-left: 4px solid #9370DB;
  }

  .stud-profile.sandman {
    border-left: 4px solid #D4AF37;
  }

  .stud-profile.harley {
    border-left: 4px solid #FF69B4;
  }

  /* Gallery styling */
  .stud-gallery {
    position: relative;
  }

  .stud-gallery::before {
    content: '';
    position: absolute;
    top: -10px;
    left: -10px;
    right: -10px;
    bottom: -10px;
    background: linear-gradient(45deg, #D4AF37, #4169E1);
    border-radius: 10px;
    opacity: 0.1;
    z-index: -1;
  }

  /* Responsive adjustments */
  @media (max-width: 1024px) {
    .stud-profile .lg\:order-1,
    .stud-profile .lg\:order-2 {
      order: initial !important;
    }
  }

  /* Hover effects */
  .stud-profile:hover {
    transform: translateY(-5px);
    transition: transform 0.3s ease;
  }

  .stud-profile:hover .stud-gallery::before {
    opacity: 0.2;
    transition: opacity 0.3s ease;
  }

  /* Enhanced typography */
  .stud-profile h2 {
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
  }

  .stud-profile .italic {
    font-style: italic;
    color: #C0C0C0;
  }

  /* Stats table styling */
  .stud-profile dt {
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .stud-profile dd {
    font-family: 'Playfair Display', serif;
  }
</style> 