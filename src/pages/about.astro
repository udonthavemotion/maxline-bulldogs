      <div class="text-center mb-16 fade-in">
        <h2 class="text-3xl md:text-4xl font-playfair font-bold text-accent mb-6">
          Our Values & Commitments
        </h2>
        <p class="text-xl text-silver max-w-2xl mx-auto">
          The principles that guide every breeding decision and shape every interaction with our bulldogs and their families.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {values.map((value, index) => (
          <div class={`bg-card-gradient p-6 rounded-lg border border-accent border-opacity-20 text-center hover:transform hover:scale-105 transition-all duration-300 fade-in`} style={`animation-delay: ${index * 0.1}s`}>
            <div class="text-4xl mb-4">{value.icon}</div>
            <h3 class="text-xl font-playfair font-bold text-accent mb-3">{value.title}</h3>
            <p class="text-silver leading-relaxed">{value.description}</p>
          </div>
        ))}
      </div>
    </section>

    <!-- Cinematic Inspiration Gallery -->
    <section class="mb-24">
      <div class="text-center mb-16 fade-in">
        <h2 class="text-3xl md:text-4xl font-playfair font-bold text-accent mb-6">
          Cinematic Inspiration
        </h2>
        <p class="text-xl text-silver max-w-2xl mx-auto">
          Explore the legendary film characters that inspire our champion bloodlines and shape our breeding philosophy.
        </p>
      </div>
      
      <Gallery 
        images={partnershipMedia}
        title="Character Gallery"
        columns={3}
        className="inspiration-gallery mb-8"
      />
    </section>

    <!-- Statistics & Achievements -->
    <section class="mb-24">
      <div class="bg-card-gradient p-12 rounded-lg border border-accent border-opacity-20">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-playfair font-bold text-accent mb-6">
            Our Achievements
          </h2>
          <p class="text-xl text-silver">
            Numbers that reflect our commitment to excellence in every aspect of breeding.
          </p>
        </div>
        
        <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
          <div class="fade-in">
            <div class="text-4xl md:text-5xl font-playfair font-bold text-accent mb-2">10+</div>
            <p class="text-silver">Years Experience</p>
          </div>
          <div class="fade-in" style="animation-delay: 0.1s">
            <div class="text-4xl md:text-5xl font-playfair font-bold text-accent mb-2">6</div>
            <p class="text-silver">Champion Studs</p>
          </div>
          <div class="fade-in" style="animation-delay: 0.2s">
            <div class="text-4xl md:text-5xl font-playfair font-bold text-accent mb-2">50+</div>
            <p class="text-silver">Happy Families</p>
          </div>
          <div class="fade-in" style="animation-delay: 0.3s">
            <div class="text-4xl md:text-5xl font-playfair font-bold text-accent mb-2">100%</div>
            <p class="text-silver">Health Guarantee</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact CTA -->
    <div class="text-center fade-in">
      <div class="bg-card-gradient p-12 rounded-lg border border-accent border-opacity-20">
        <h2 class="text-3xl md:text-4xl font-playfair font-bold text-accent mb-6">
          Ready to Welcome Your Legend?
        </h2>
        <p class="text-xl text-silver mb-8 max-w-2xl mx-auto">
          Join our exclusive family of Maxline Bulldogs owners and experience the luxury of champion bloodlines 
          with cinematic inspiration.
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          <a href="/contact" class="luxury-button">
            Contact Us Today
          </a>
          <a href="/studs" class="luxury-button">
            Meet Our Champions
          </a>
          <a href="/puppies" class="luxury-button">
            View Available Puppies
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Final Banner -->
  <div class="mt-16">
    <Banner 
      text="Powered by the legendary partnership of Maxline Bulldogs √ó HorrorBullz HQ - Where cinema meets championship."
    />
  </div>
</Layout>

<style>
  /* Enhanced animations */
  .fade-in {
    opacity: 0;
    animation: fadeIn 1s ease-in-out forwards;
  }

  .slide-up {
    opacity: 0;
    transform: translateY(30px);
    animation: slideUp 1s ease-out forwards;
    animation-delay: 0.3s;
  }

  .slide-left {
    opacity: 0;
    transform: translateX(-30px);
    animation: slideLeft 1s ease-out forwards;
    animation-delay: 0.2s;
  }

  .slide-right {
    opacity: 0;
    transform: translateX(30px);
    animation: slideRight 1s ease-out forwards;
    animation-delay: 0.4s;
  }

  @keyframes fadeIn {
    to {
      opacity: 1;
    }
  }

  @keyframes slideUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes slideLeft {
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes slideRight {
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  /* Gallery styling */
  .partnership-gallery::before,
  .inspiration-gallery::before {
    content: '';
    position: absolute;
    top: -10px;
    left: -10px;
    right: -10px;
    bottom: -10px;
    background: linear-gradient(45deg, #D4AF37, #4169E1);
    border-radius: 10px;
    opacity: 0.1;
    z-index: -1;
  }

  /* Team profile styling */
  .bg-card-gradient:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 40px rgba(212, 175, 55, 0.15);
  }

  /* Values grid hover effects */
  .grid > div:hover {
    box-shadow: 0 10px 30px rgba(212, 175, 55, 0.2);
  }

  /* Enhanced typography */
  .font-playfair {
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
  }

  /* Statistics section */
  .grid .fade-in div {
    background: linear-gradient(135deg, #D4AF37, #4169E1);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .slide-left,
    .slide-right {
      transform: translateY(30px);
      animation: slideUp 1s ease-out forwards;
    }
    
    .grid {
      gap: 1rem;
    }
    
    .text-4xl {
      font-size: 2rem;
    }
    
    .text-5xl {
      font-size: 2.5rem;
    }
  }

  /* Enhanced mobile experience */
  @media (max-width: 640px) {
    .bg-card-gradient {
      padding: 1.5rem;
    }
    
    .partnership-gallery,
    .inspiration-gallery {
      margin: 0 -1rem;
    }
  }
</style> 